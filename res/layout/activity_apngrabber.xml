<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".APNGrabberActivity" 
    >

    <Button
        android:id="@+id/refreshValues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh Values" 
        />

    <Button
        android:id="@+id/saveValues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/refreshValues"
        android:text="Save Values" 
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/saveValues" 
        >

        <LinearLayout
            android:id="@+id/apnValueList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />
    </ScrollView>

</RelativeLayout>